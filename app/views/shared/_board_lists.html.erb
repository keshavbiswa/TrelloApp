<% @boards.each do |b| %>
  <div class="col-md-4">
      <div class="card mb-4 box-shadow">
          <div class="card-body">
              <h5 class="card-title"><%= link_to "#{b.name}", board_path(b) %></h5>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                      <%= link_to "View", board_path(b), class: "btn btn-sm btn-outline-secondary"%>
                      <%= link_to "Edit", edit_board_path(b), class: "btn btn-sm btn-outline-secondary"%>
                  </div>
                  <small class="text-muted">Created <%= distance_of_time_in_words(b.created_at, DateTime.now)%> ago</small>
              </div>
          </div>
      </div>
  </div>
<% end %>