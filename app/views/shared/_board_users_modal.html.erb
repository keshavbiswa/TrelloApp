<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Users</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% @users.each do |u|%>
              <div class="modal-body">
                  <div class="card" style="">
                    <div class="card-body">
                      <h5 class="card-title"><%= u.name %></h5>
                      <p class="card-text"><%= u.email %></p>
                    </div>
                    <p class="text-center">Boards</p>
                    <ul class="list-group list-group-flush">
                      <% if u.boards.count <= 0 %>
                        <p class="list-group-item text-center alert alert-warning"> This user has not created any boards yet !</p>
                      <% end %>
                      <% u.boards.each do |board| %>
                        <li class="list-group-item"><%= board.name %></li>
                      <% end %>
                    </ul>
                    <div class="card-body">
                      <a href="#" class="card-link">Card link</a>
                    </div>
                  </div>
              </div>
            <% end %>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>