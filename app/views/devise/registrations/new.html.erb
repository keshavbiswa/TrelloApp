<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-signin") do |f| %>
  <%= devise_error_messages! %>
  <div class="text-center mb-4">
    <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Trello</h1>
    <p>Login or sign up before using this application.</p>
  </div>
  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: "inputEmail", placeholder: "Email address"  %>
    <%= f.label :email %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, autocomplete: "off",class: 'form-control',id: "inputPassword", placeholder: "Password" %>
    <%= f.label :password %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Confirm Password" %>
    <%= f.label :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Sign Up", class: 'btn btn-lg btn-primary btn-block' %>
    <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2018</p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
