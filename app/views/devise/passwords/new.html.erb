<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post },  class: "form-signin") do |f| %>
  <%= devise_error_messages! %>
  <div class="text-center mb-4">
    <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Trello</h1>
    <h2>Forgot your password?</h2>
  </div>
  <div class="form-label-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: "inputEmail", placeholder: "Email address"  %>
    <%= f.label :email %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block' %>
    <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2018</p>
  </div>
<% end %>

<%= render "devise/shared/links" %>
